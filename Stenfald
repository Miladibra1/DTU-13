import java.util.Scanner;

public class Sten
{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Giv mig en værdi for højden, og jeg beregner faldtiden for stenen.");
        double højde = in.nextDouble();
        double tyngdeacceleration = 9.80665;
        double Faldtid = Math.sqrt((2*højde)/tyngdeacceleration);
        double sluthastighed = tyngdeacceleration*Faldtid;
        System.out.println("Når højden er: " +højde+ " Så er faldtiden er altså: " + Faldtid+ " Og sluthastigheden er: " +sluthastighed);
    }
}
